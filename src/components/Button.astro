---
// Henter parametrene fra Astro.props
const { variant= "primary", size = "medium" } = Astro.props; 

//Definer den styling (Tailwind classes, der gør sig gældende for alle knapper
const buttonStyling = " text-center"; 

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige varianter 
const variantClasses = {
    "primary": " font-display hover:border-blue-600 active:border-yellow-200 border-4 border-yellow-500 text-blue-600 hover:text-yellow-500",
    "secondary": " font-display border-blue-600 active:border-blue-200 border-4 hover:border-yellow-500 hover:text-blue-600 text-yellow-500",
    "tertiary": "  font-display hover:text-pink-500 hover:bg-blue-600 active:bg-pink-200 bg-pink-500 text-blue-600",
    "quantriary": " font-display hover:text-yellow-500 hover:bg-pink-500 active:bg-yellow-200 bg-yellow-500 text-pink-600",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskelligeog størrelser.
const sizeClasses = {
    "large": "font-black text-xl px-5 py-1 py-auto",
    "medium": "font-black text-sm p-3 text-lg",
    "small": "font-black text-base px-3"
};
---
<!--Sæt classes for den pågældende knap sammen ved hjælp af Astros class:list -->
<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>